<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/scripts/shell</directory>
			<includes>
				<include>*.*</include>
			</includes>
			<lineEnding>unix</lineEnding>
			<fileMode>777</fileMode>
			<directoryMode>777</directoryMode>
			<outputDirectory>scripts/shell</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts/shell/buildjobs</directory>
			<includes>
				<include>*.*</include>
			</includes>
			<lineEnding>unix</lineEnding>
			<fileMode>777</fileMode>
			<directoryMode>777</directoryMode>
			<outputDirectory>scripts/shell/buildjobs</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts/shellQA</directory>
			<includes>
				<include>*.sh</include>
			</includes>
			<lineEnding>unix</lineEnding>
			<fileMode>777</fileMode>
			<directoryMode>777</directoryMode>
			<outputDirectory>scripts/shellQA</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>target/scripts</directory>
			<includes>
				<include>*.out</include>
			</includes>
			<lineEnding>unix</lineEnding>
			<fileMode>555</fileMode>
			<directoryMode>755</directoryMode>
			<outputDirectory>scripts/shell</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		
		<fileSet>
			<directory>src/main/config</directory>
			<lineEnding>unix</lineEnding>
			<fileMode>644</fileMode>
			<directoryMode>755</directoryMode>
			<outputDirectory>config</outputDirectory>
			<filtered>true</filtered>
		</fileSet>		
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>${project.artificatId}-${project.version}.jar</include>
			</includes>
			<lineEnding>unix</lineEnding>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<fileMode>644</fileMode>
			<directoryMode>755</directoryMode>
		</dependencySet>
	</dependencySets>
</assembly>