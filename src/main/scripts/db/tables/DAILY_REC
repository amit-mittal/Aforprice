DROP TABLE IF EXISTS DAILY_REC;
CREATE table DAILY_REC
( 
	ID VARCHAR(40) NOT NULL,
	NAME VARCHAR(10) NOT NULL,
	RUN_DATE DATETIME NOT NULL,
	TYPE VARCHAR(30) NOT NULL,
	TEXT VARCHAR(500),
	COUNT INTEGER,
	TIME_MODIFIED DATETIME NOT NULL,

	INDEX RETAILER_ID_DATE_IDX using BTREE (ID, NAME, RUN_DATE)
) ENGINE=InnoDB;
describe DAILY_REC;